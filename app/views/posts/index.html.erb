<h1>Блог</h1>



<% @posts.each do |post| %>
<div class="posts">
	
	<div class="padmin">
	    <%= link_to 'Edit', edit_post_path(post) %>
	    <%= link_to 'Destroy', post, :confirm => 'Are you sure?', :method => :delete %>
	</div> 	
	
	<div class="ptitle">
		<%= link_to post.title, post %>
	</div>
	
	<div class="pinfo">
		
		<span class="pcat"><%= Blogcat.find(post.cat_id).category %></span> — <span class="ptime"><%=post.created_at.strftime("%m.%d.%Y")%></span>
	</div>

	<div class="pcontent">
	    <%= post.content %>
	</div>

</div>

<% end %>


