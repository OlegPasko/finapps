<div align="center">
<h1>Регистрация</h1>

<%= form_for @user do |f| %>
  <% if @user.errors.any? %>
    <div class="error_messages">
      <h2>Form is invalid</h2>
     
        <% for message in @user.errors.full_messages %>
         <p><%= message %></p>
        <% end %>
     
    </div>
  <% end %>
    <p>
    <%= f.label :Имя_пользователя %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :Пароль %><br />
    <%= f.password_field :password %>
  </p>
  <p>
    <%= f.label :Подтверждание_пароля %><br />
    <%= f.password_field :password_confirmation %>
  </p>
  <p class="button"><%= f.submit "Зарегиццо" %></p>
<% end %>
</div>
